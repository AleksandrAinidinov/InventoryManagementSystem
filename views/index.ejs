<!DOCTYPE html>
<html lang="en">
<head>
    <title>Inventory List</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container">
    <h1 class="mt-3">Inventory List</h1>
    <a href="/add" class="btn btn-primary">Add Item</a>
    <a href="/sell" class="btn btn-danger">Sell Item</a>
    <a href="/sales" class="btn btn-info">All Sales</a>
    <a href="/summary" class="btn btn-dark">Sales Summary</a>
    <a href="/ledger" class="btn btn-secondary">Ledger Report</a>
    <table class="table mt-3">
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        <% items.forEach(item => { %>
            <tr>
                <td><%= item.Name %></td>
                <td><%= item.Quantity %></td>
                <td>$<%= item.Price %></td>
                <td><%= item.Description %></td>
                <td>
                    <a href="/edit/<%= item.id %>" class="btn btn-warning">Edit</a>
                    <a href="/delete/<%= item.id %>" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        <% }) %>
    </table>
</body>
</html>